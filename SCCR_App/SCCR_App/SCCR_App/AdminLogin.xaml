<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCCR_App.AdminLogin">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please enter the Admin Credentials here:"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />            
            <Entry x:Name ="Username" Placeholder="Username" IsSpellCheckEnabled="false"/>
            <Entry x:Name ="Password" IsPassword="true" Placeholder="Password" IsSpellCheckEnabled="false"/>
            <Button x:Name ="Submit_Button" Text="Submit"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="AdminCredsClicked" />
            <Label Text="Admin accounts can upload profiles for new rescues. To gain admin priviledges, contact Second City Canine Rescue's admin."
                VerticalOptions="End" 
                HorizontalOptions="CenterAndExpand" 
                XAlign="Center"/>
            <Image Source="RRtext.png"
                   VerticalOptions="End"
                   HorizontalOptions="CenterAndExpand" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>